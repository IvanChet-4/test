<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Кнопки главного экрана-->
    <style name="Theme.Button.main_activity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/settings_background_button</item>
        <item name="android:textColor">@color/main_text_PLM</item>
        <item name="android:textSize">@dimen/text22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/main_text_PLM</item>
        <item name="iconPadding">@dimen/padding10dp</item>
        <item name="cornerRadius">@dimen/radius16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin4dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!--Кнопки на экране настроек-->
    <style name="Theme.Button.activity_settings" parent="Theme.MyApp.DayNight">
        <item name="android:background">@drawable/border_not</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding16dp</item>
        <item name="android:paddingTop">@dimen/padding21dp</item>
        <item name="android:paddingBottom">@dimen/padding21dp</item>
        <item name="android:paddingEnd">@dimen/padding21dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!--Стрелочка на экране настроек-->
    <style name="Theme.Button.activity_settings_arrow" parent="Theme.MyApp.DayNight">
    </style>

<!--Для экрана поиска-->
    <style name="Button_Search">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/settings_background_button</item>
    </style>
    <style name="EditText_Search">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:background">@drawable/search_back1</item>
    </style>
</resources>