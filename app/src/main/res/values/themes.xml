<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background_PLM</item>
        <!-- Customize your theme here. -->
        <item name="iconTint">@color/settings_image_PLM</item>
        <item name="android:textColor">@color/settings_text_PLM</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!--Для главного экрана-->
    <style name="Theme.Button.activity_settings_theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background_PLM</item>
        <!-- Customize your theme here. -->
        <item name="iconTint">@color/settings_image_PLM</item>
        <item name="android:textColor">@color/settings_text_PLM</item>
        <item name="android:backgroundTint">@color/main_background_PLM</item>
    </style>

    <!--Для экрана поиска-->
    <style name="Theme.Find" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_background_PLM</item>
        <item name="colorSecondaryVariant">@color/main_background_PLM</item>
        <item name="colorOnSecondary">@color/main_background_PLM</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background_PLM</item>
        <!-- Customize your theme here. -->
        <item name="iconTint">@color/settings_image_PLM</item>
        <item name="android:textColor">@color/settings_text_PLM</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>


    <!--Для поля поиска-->
    <style name="EditText_Search">
        <item name="tint">@color/settings_image_PLM</item>
        <item name="drawableTint">@color/settings_image_PLM</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/settings_text_PLM</item>
        <item name="android:background">@drawable/search_back1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="backArrowSearch">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="otherImageSearch">
        <item name="android:textColor">@color/settings_image_PLM</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="text_settings">
        <item name="android:textColor">@color/settings_text_PLM</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text16sp</item>
    </style>
    <style name="text_and_image_search_placeholder">
        <item name="android:textColor">@color/settings_text_title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text19sp</item>
        <item name="colorPrimary">@color/settings_text_title</item>
    </style>
    <style name="refresh_button_searching">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text14sp</item>
        <item name="android:tint">@color/settings_text_title</item>
        <item name="android:backgroundTint">@color/settings_text_title</item>
        <item name="cornerRadius">@dimen/radius54dp</item>
    </style>


    <style name="image_errors_searching">
        <item name="colorPrimary">@color/settings_text_title</item>
    </style>
</resources>