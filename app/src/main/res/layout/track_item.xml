<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/trackLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/paramHW61dp"
    android:orientation="horizontal"
    android:background="?attr/colorSecondary">

    <ImageView
        android:id="@+id/albums_img"
        style="@style/image_albm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/paramHW45dp"
        android:layout_height="@dimen/paramHW45dp"
        android:layout_marginTop="@dimen/margin8dp"
        android:layout_marginStart="@dimen/margin13dp" />

    <TextView
        android:id="@+id/track_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/paramHW0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin14dp"
        android:layout_marginStart="@dimen/margin66dp"
        android:layout_marginEnd="@dimen/margin44dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="@dimen/paramHW0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/track_name"
        app:layout_constraintEnd_toEndOf="@+id/track_name"
        app:layout_constraintTop_toBottomOf="@+id/track_name">

        <TextView
            android:id="@+id/band_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text11sp"
            android:textColor="?attr/color" />

        <ImageView
            android:id="@+id/ellipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10dp"
            android:layout_marginStart="@dimen/margin5dp"
            android:src="@drawable/ellipse_1"/>

        <TextView
            android:id="@+id/track_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin5dp"
            android:textSize="@dimen/text11sp"
            android:textColor="?attr/color" />

    </LinearLayout>

    <ImageView
        android:id="@+id/vector_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/backplay"
        android:layout_marginTop="@dimen/margin23dp"
        android:layout_marginEnd="@dimen/margin20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>