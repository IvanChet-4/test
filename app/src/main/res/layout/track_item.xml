<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/paramHW61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/albums_img"
        android:layout_width="@dimen/paramHW45dp"
        android:layout_height="@dimen/paramHW45dp"
        android:layout_marginTop="@dimen/margin8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/track_name"
        style="@style/text_settings"
        android:layout_width="@dimen/paramHW0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="@dimen/margin14dp"
        android:layout_marginEnd="@dimen/margin44dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="@dimen/paramHW0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/track_name"
        app:layout_constraintStart_toStartOf="@+id/track_name"
        app:layout_constraintTop_toBottomOf="@+id/track_name">

        <TextView
            android:id="@+id/band_name"
            style="@style/otherImageSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/text11sp" />

        <ImageView
            android:id="@+id/ellipse"
            style="@style/otherImageSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin5dp"
            android:layout_marginTop="@dimen/margin5dp"
            android:src="@drawable/ellipse_1" />

        <TextView
            android:id="@+id/track_time"
            style="@style/otherImageSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin5dp"
            android:textSize="@dimen/text11sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/vector_button"
        style="@style/otherImageSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin23dp"
        android:layout_marginEnd="@dimen/margin24dp"
        android:src="@drawable/backplay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>